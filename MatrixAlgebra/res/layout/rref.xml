<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="#1a1a1a" 
        android:background="#ffffff">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et1"
        android:layout_centerVertical="true"
        android:text="Row Equivalent Matrix"
        android:textSize="30sp" />

    

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et1"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/et1"
        android:text="Row Reduce Echelon Form" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv2"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="44dp"
        android:text="" />

    <TextView
        android:id="@+id/tvRows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/b1"
        android:layout_alignTop="@+id/et1"
        android:text="Rows" />

    <TextView
        android:id="@+id/tvColumns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvRows"
        android:layout_alignBottom="@+id/tvRows"
        android:layout_marginLeft="48dp"
        android:layout_toRightOf="@+id/tv2"
        android:text="Columns" />

    <EditText
        android:id="@+id/etRow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tvRows"
        android:layout_below="@+id/tvRows"
        android:layout_marginTop="23dp"
        android:textColor="#1a1a1a"
        android:ems="10"
        android:inputType="number" 
        android:background="#ffffff"/>

    <EditText
        android:id="@+id/etCol"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/etRow"
        android:layout_alignBottom="@+id/etRow"
        android:layout_alignLeft="@+id/tvColumns"
        android:inputType="number"
        android:textColor="#1a1a1a"
        android:background="#ffffff"
        android:ems="10" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvRows"
        android:layout_alignLeft="@+id/et1"
        android:layout_marginBottom="26dp"
        android:text="Matrix:" 
        android:textSize="20sp"
        android:textStyle="bold|italic"/>

</RelativeLayout>